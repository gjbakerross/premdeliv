<script>
$('#datepicker').datepicker({format: 'dd/mm/yyyy', todayHighlight: true});
</script>

<div class = "container">

<h1 class="display-4 mb-4 mx-auto text-center">Cancel Premier Delivery Status</h1>

<%= form_with model: @user do |form| %>
    <div class ="form-group">
    <%= form.label :email%>
    <%= form.text_field :email %>
    </div>
     <div class ="form-group">
     <%= form.label "Country"%>
    <%= form.select :country, ["UK","US","IE","DE","NL","FR"]%>
    </div>
    <div class="form-group">
    <%= form.label "Cancellation Date"%>
    <%= form.date_field :date, :id => "datepicker" %>
    </div>
    
    
  <%= form.submit :value => "Update Premier Delivery Status", :class => 'btn btn-primary' %>
<% end %>
<br>
<%= link_to 'Back', users_path %>

</div>
